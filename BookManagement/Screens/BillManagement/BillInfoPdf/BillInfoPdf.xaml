<UserControl x:Class="BookManagement.BillInfoPdf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookManagement"
             mc:Ignorable="d" 
             xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="grid">
    <Grid
        Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Border
            BorderBrush="{StaticResource BlackColorBrush}"
            BorderThickness="0 0 0 1"
            Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Margin="30 0 0 0"
                    Text="BUKU"
                    FontSize="{StaticResource FontSize34}"
                    FontWeight="Bold"/>
                <Grid
                    Grid.Column="1"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="5"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        Orientation="Horizontal">
                        <TextBlock
                            Text="Mã hóa đơn: "
                            FontSize="{StaticResource FontSize14}"
                            FontWeight="ExtraLight"/>
                        <TextBlock
                            Text="{Binding Bill.MaHoaDon,UpdateSourceTrigger=PropertyChanged}"
                            FontSize="{StaticResource FontSize14}"
                            FontWeight="Regular"/>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="2"
                        Orientation="Horizontal">
                        <TextBlock
                            Text="Ngày lập hóa đơn: "
                            FontSize="{StaticResource FontSize14}"
                            FontWeight="ExtraLight"/>
                        <TextBlock
                            Text="{Binding Bill.NgayLapHoaDon,UpdateSourceTrigger=PropertyChanged}"
                            FontSize="{StaticResource FontSize14}"
                            FontWeight="Regular"/>
                    </StackPanel>
                </Grid>
                
            </Grid>
        </Border>

        <!--User Info-->
        <Grid
            Grid.Row="2"
            Margin="0 0 0 30"
            Visibility="{c:Binding 'Bill.SoTienNo!=0'}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="7"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Text="Người mua: "
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                FontSize="{StaticResource FontSize18}"
                FontWeight="Regular"/>
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Text="Tên:                  "
                FontSize="{StaticResource FontSize16}"
                FontWeight="Light"/>
            <Border
                Grid.Row="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Grid.Column="1">
                <TextBlock
                    MaxWidth="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border}, Path=ActualWidth}"
                    Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}"
                    HorizontalAlignment="Left"
                    FontSize="{StaticResource FontSize14}"
                    TextWrapping="Wrap"
                    FontWeight="Regular"/>
            </Border>
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Text="Địa chỉ:             "
                FontSize="{StaticResource FontSize16}"
                FontWeight="Light"/>
            <Border
                Grid.Row="4"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Grid.Column="1">
                <TextBlock
                    MaxWidth="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border}, Path=ActualWidth}"
                    Text="{Binding CustomerAddress, UpdateSourceTrigger=PropertyChanged}"
                    HorizontalAlignment="Left"
                    FontSize="{StaticResource FontSize14}"
                    TextWrapping="Wrap"
                    FontWeight="Regular"/>
            </Border>
            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                Text="Số điện thoại:   "
                FontSize="{StaticResource FontSize16}"
                FontWeight="Light"/>
            <Border
                Grid.Row="6"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Grid.Column="1">
                <TextBlock
                    MaxWidth="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border}, Path=ActualWidth}"
                    Text="{Binding CustomerPhone, UpdateSourceTrigger=PropertyChanged}"
                    HorizontalAlignment="Left"
                    FontSize="{StaticResource FontSize14}"
                    TextWrapping="Wrap"
                    FontWeight="Regular"/>
            </Border>
        </Grid>
        <Border
            BorderThickness="0 0 0 1"
            BorderBrush="{StaticResource BlackColorBrush}"
            Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock 
                    Text="SẢN PHẨM" 
                    Grid.Column="0" 
                    FontSize="{StaticResource FontSize14}" 
                    FontWeight="Light"/>
                <TextBlock 
                    Text="SỐ LƯỢNG" 
                    Grid.Column="2" 
                    FontSize="{StaticResource FontSize14}" 
                    FontWeight="Light" 
                    HorizontalAlignment="Center"/>
                <TextBlock 
                    Text="TỔNG" 
                    Grid.Column="4" 
                    FontSize="{StaticResource FontSize14}" 
                    FontWeight="Light" 
                    HorizontalAlignment="Right"/>
            </Grid>
        </Border>
        <ListView
            Grid.Row="5"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            ItemsSource="{Binding Bill.CHITIETHOADONs, UpdateSourceTrigger=PropertyChanged}"
            BorderBrush="Transparent"
            BorderThickness="0">
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource BaseStyle}">
                    <Setter Property="Padding" Value="0 5"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="BorderBrush" Value="{StaticResource NotAvailableColorBrush}"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Border
                            VerticalAlignment="Center"
                            HorizontalAlignment="Stretch"
                            Grid.Column="0">
                            <TextBlock
                                MaxWidth="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border}, Path=ActualWidth}"
                                Text="{Binding SACH.DAUSACH.TenSach, UpdateSourceTrigger=PropertyChanged}"
                                HorizontalAlignment="Left"
                                Foreground="{StaticResource BlackColorBrush}"
                                FontSize="{StaticResource FontSize14}"
                                TextWrapping="Wrap"/>
                        </Border>
                        <Border
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            Grid.Column="2">
                            <TextBlock
                                MaxWidth="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border}, Path=ActualWidth}"
                                Text="{Binding SoLuong, UpdateSourceTrigger=PropertyChanged}"
                                HorizontalAlignment="Center"
                                Foreground="{StaticResource BlackColorBrush}"
                                FontSize="{StaticResource FontSize14}"
                                TextTrimming="CharacterEllipsis"/>
                        </Border>
                        <Border
                            Grid.Column="4"
                            HorizontalAlignment="Stretch">
                            <DockPanel
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                MaxWidth="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border},Path=ActualWidth}">
                                <Border
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Stretch">
                                    <TextBlock
                                        Foreground="{StaticResource BlackColorBrush}"
                                        MaxWidth="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border}, Path=MaxWidth}"
                                        FontSize="{StaticResource FontSize14}"
                                        TextTrimming="CharacterEllipsis">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{x:Static local:MultiDecimalToMoneyConverter.Instance}">
                                                <Binding Path="SoLuong" UpdateSourceTrigger="PropertyChanged"/>
                                                <Binding Path="DonGia" UpdateSourceTrigger="PropertyChanged"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </Border>
                            </DockPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Border
            BorderThickness="0 1 0 0"
            BorderBrush="{StaticResource BlackColorBrush}"
            Grid.Row="7">
            <Grid
                VerticalAlignment="Top"
                HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock 
                    Grid.Row="0"
                    Margin="0 5 0 0"
                    Text="TỔNG TIỀN" 
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="{StaticResource FontSize14}" 
                    FontWeight="Light" 
                    HorizontalAlignment="Right"/>
                <StackPanel
                    Grid.Row="0"
                    Margin="0 5 0 0"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <TextBlock 
                        Text="{Binding Bill.TongTien, UpdateSourceTrigger=PropertyChanged,Converter={x:Static local:DecimalToMoneyConveter.Instance}}" 
                        FontSize="{StaticResource FontSize18}" 
                        FontWeight="Medium"/>
                </StackPanel>
                <TextBlock 
                    Grid.Row="1"
                    Margin="0 5 0 0"
                    Text="ĐÃ TRẢ" 
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="{StaticResource FontSize14}" 
                    FontWeight="Light" 
                    HorizontalAlignment="Right"
                    Visibility="{c:Binding 'Bill.SoTienNo!=0'}"/>
                <StackPanel
                    Grid.Row="1"
                    Margin="0 5 0 0"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Visibility="{c:Binding 'Bill.SoTienNo!=0'}">
                    <TextBlock 
                        Text="{Binding Paid, UpdateSourceTrigger=PropertyChanged}" 
                        FontSize="{StaticResource FontSize18}" 
                        FontWeight="Medium"/>
                </StackPanel>
                <TextBlock 
                    Grid.Row="2"
                    Margin="0 5 0 0"
                    Text="TIỀN NỢ" 
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="{StaticResource FontSize14}" 
                    FontWeight="Light" 
                    HorizontalAlignment="Right"
                    Visibility="{c:Binding 'Bill.SoTienNo!=0'}"/>
                <StackPanel
                    Grid.Row="2"
                    Margin="0 5 0 0"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Visibility="{c:Binding 'Bill.SoTienNo!=0'}">
                    <TextBlock 
                        Text="{Binding Bill.SoTienNo, UpdateSourceTrigger=PropertyChanged,Converter={x:Static local:DecimalToMoneyConveter.Instance}}" 
                        FontSize="{StaticResource FontSize18}" 
                        FontWeight="Medium"/>
                </StackPanel>
            </Grid>
        </Border>
        <StackPanel Grid.Row="9">
            <Grid 
                HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon 
                        Kind="Heart"
                        Foreground="{StaticResource BlackColorBrush}" 
                        Width="20" 
                        Height="20" 
                        Margin="5" 
                        VerticalAlignment="Center"/>
                    <TextBlock 
                        Text="Cảm ơn và hẹn gặp lại!" 
                        VerticalAlignment="Center" 
                        FontSize="20" 
                        Margin="5" 
                        FontWeight="Light"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <TextBlock Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" FontSize="8" Margin="5" FontWeight="Light"/>
                    <TextBlock Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" FontSize="8" Margin="5" FontWeight="Light"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
